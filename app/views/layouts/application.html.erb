<!DOCTYPE HTML>
<html>
	<head>
		<title>OkAlpha</title>
		<link rel="icon" href="https://res.cloudinary.com/jolinar1013/image/upload/v1469064315/oka_sxvrrd.png">
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
		<script type="text/javascript">
	    window.CLOUDINARY_OPTIONS = {
	      cloud_name: "<%=ENV['CLOUD_NAME']%>",
	      upload_preset: "<%= ENV['UPLOAD_PRESET'] %>"
	    };
		</script>
		<%= stylesheet_link_tag 'application', media: 'all'%>
	  <%= csrf_meta_tags %>
	</head>
	<% if signed_in? %>
		<body>
	    <header>
	      <nav class="header-nav">

	        <h1 class="header-logo">
	          <a class="header-button" href="#">OkAlpha</a>
						<a class="header-button" href="<%="#/likes/#{current_user.id}"%>">My Likes</a>
						<a class="header-button" href="<%="#/messages/#{current_user.id}"%>">
							My Messages
							<span class="hidden" id="badge"></span>
						</a>
					</h1>
	        <ul class="header-list">
						<li class="header-list-item" id="profile-link">
							<a href= "<%="#/profile/#{current_user.id}"%> " id="user_form">
								<img id="img-icon" src="<%=current_user.image_url%>"></img>
								<span class="profile-hover">Edit Profile</span>
							</a>
						</li>
	          <li class="header-list-item"><%= button_to "Sign Out", session_url, :method => :delete %></li>
	        </ul>

	      </nav>

	    </header>
	    <%= yield %>
		</body>
	<% else %>
		<body class="sign-in-page">
	    <%= render "layouts/new_user" %>
		</body>
  <% end %>
</html>
