<div>
<%= flash[:errors_signup].join("<br>").html_safe if flash[:errors_signup] %>
<h2>Sign Up</h2>

<form action="<%= users_url %>" method="post">
  <%= auth_token_input %>
  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>
  <br>
  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>
  <br>
  <input type="submit" value="Sign Up">
</form>
<br>

<hr><hr>

<h2>Log In</h2>
<%= flash[:errors_login].join("<br>").html_safe if flash[:errors_login] %>
<form action="<%= session_url %>" method="post">
  <%= auth_token_input %>
  <label>
    Username
    <input type="text" name="user[username]" value="">
  </label>
  <br>
  <label>
    Password
    <input type="password" name="user[password]" value="">
  </label>
  <br><br>
  <input type="submit" value="Log In">
</form>
</div>
